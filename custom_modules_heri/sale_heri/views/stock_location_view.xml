<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- Ajout is_kiosque dans stock_location form -->
		<record model="ir.ui.view" id="stock_location_heri_form_view">
			<field name="name">stock.location.heri.form</field>
			<field name="model">stock.location</field>
			<field name="inherit_id" ref="stock.view_location_form"/>
			<field name="arch" type="xml">
			    <xpath expr="//field[@name='usage']" position="before">
					<field name="date_contrat" attrs="{'required': [('is_kiosque', '=', True)], 'invisible':[('is_kiosque', '=', False)]}"/>
					<field name="region_id" attrs="{'required': [('is_kiosque', '=', True)], 'invisible':[('is_kiosque', '=', False)]}"/>
					<field name="premiere_redevance"/>
				</xpath>
			</field>
		</record>	
		<!-- End Ajout is_kiosque dans stock_location form -->
	</data>
</odoo>