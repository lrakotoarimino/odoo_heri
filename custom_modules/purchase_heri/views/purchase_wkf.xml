<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- workflow -->
		<record id="purchase_heri_wkf" model="workflow">
			<field name="name">workflow.purchase.heri</field>
			<field name="osv">purchase.order</field>
			<field name="on_create">True</field>
		</record>
		
		<!-- début activité achats imports-->
		<record id="act_nouveau" model="workflow.activity">
			<field name="wkf_id" ref="purchase_heri_wkf"/>
			<field name="flow_start">True</field>
			<field name="name">Nouveau</field>
			<field name="kind">function</field>
			<field name="action">action_nouveau()</field>
		</record>
		
		<record id="act_attente_validation_dg" model="workflow.activity">
			<field name="wkf_id" ref="purchase_heri_wkf"/>
			<field name="name">En attente validation DG</field>
			<field name="kind">function</field>
			<field name="action">action_attente_validation_dg()</field>
		</record>
		
		<!-- début activité achats  locaux -->
		<record id="act_attente_validation_superieur" model="workflow.activity">
			<field name="wkf_id" ref="purchase_heri_wkf"/>
			<field name="name">En attente validation superieur</field>
			<field name="kind">function</field>
			<field name="action">action_attente_validation_superieur()</field>
		</record>
		<!-- fin activité achats locaux -->
		
		<record id="act_validation" model="workflow.activity">
			<field name="wkf_id" ref="purchase_heri_wkf"/>
			<field name="name">Validation</field>
			<field name="kind">function</field>
			<field name="action">action_validation()</field>
		</record>
		
		<record id="act_creation_bex" model="workflow.activity">
			<field name="wkf_id" ref="purchase_heri_wkf"/>
			<field name="name">Création BEX</field>
			<field name="kind">function</field>
			<field name="action">action_creation_bex()</field>
		</record>
		<!-- fin activité achats imports -->
		
		<!-- début transition achats imports -->
		<record id="act_nouveau_to_act_attente_validation_dg" model="workflow.transition">
		    <field name="act_from" ref="act_nouveau"/>
            <field name="act_to" ref="act_attente_validation_dg"/>
            <field name="signal">action_attente_validation_dg</field>
		</record>
		
		<!-- début transition achats locaux -->
		<record id="act_nouveau_to_act_attente_validation_superieur" model="workflow.transition">
		    <field name="act_from" ref="act_nouveau"/>
            <field name="act_to" ref="act_attente_validation_superieur"/>
            <field name="signal">action_attente_validation_superieur</field>
		</record>
		
		<record id="act_attente_validation_superieur_to_act_validation" model="workflow.transition">
		    <field name="act_from" ref="act_attente_validation_superieur"/>
            <field name="act_to" ref="act_validation"/>
            <field name="signal">action_validation_superieur</field>
		</record>
		<record id="act_attente_validation_superieur_to_act_nouveau" model="workflow.transition">
		    <field name="act_from" ref="act_attente_validation_superieur"/>
            <field name="act_to" ref="act_nouveau"/>
            <field name="signal">action_refus_superieur</field>
		</record>
		<!-- fin transition achats locaux -->
		
		<record id="act_attente_validation_dg_to_act_validation" model="workflow.transition">
		    <field name="act_from" ref="act_attente_validation_dg"/>
            <field name="act_to" ref="act_validation"/>
            <field name="signal">action_validation</field>
		</record>
		<record id="act_attente_validation_dg_to_act_nouveau" model="workflow.transition">
		    <field name="act_from" ref="act_attente_validation_dg"/>
            <field name="act_to" ref="act_nouveau"/>
            <field name="signal">action_refus_dg</field>
		</record>
		
		<record id="act_validation_to_act_creation_bex" model="workflow.transition">
		    <field name="act_from" ref="act_validation"/>
            <field name="act_to" ref="act_creation_bex"/>
            <field name="signal">action_creation_bex</field>
		</record>
		<record id="act_validation_to_act_nouveau" model="workflow.transition">
		    <field name="act_from" ref="act_validation"/>
            <field name="act_to" ref="act_nouveau"/>
            <field name="signal">action_remettre_nouveau</field>
		</record>
		<!-- fin transition achats imports-->
	
	</data>
</odoo>