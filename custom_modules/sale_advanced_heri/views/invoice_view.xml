<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	    
	            
   		<record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
				    <field name="kiosk_id"/>
				</field>
				<field name="payment_term_id" position="after">
				    <field name="date_start"/>
				    <field name="date_end"/>
				</field>
			</field>
        </record>
	    
    	<record id="action_invoice_rental" model="ir.actions.act_window">
            <field name="name">Rental Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('type','in',('out_invoice', 'out_refund')),('invoice_type','=','rental')]</field>
            <field name="context">{'type':'out_invoice', 'journal_type': 'sale', 'invoice_type': 'rental'}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a customer invoice.
              </p>
            </field>
        </record>
        
        <record id="action_invoice_tree_rental_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.invoice_tree"/>
            <field name="act_window_id" ref="action_invoice_rental"/>
        </record>

        <record id="action_invoice_form_rental_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="invoice_form"/>
            <field name="act_window_id" ref="action_invoice_rental"/>
        </record>
        
       	<record id="action_invoice_loss" model="ir.actions.act_window">
            <field name="name">Losses</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('type','in',('out_invoice', 'out_refund')),('invoice_type','=','loss')]</field>
            <field name="context">{'type':'out_invoice', 'journal_type': 'sale', 'invoice_type': 'loss'}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a customer invoice.
              </p>
            </field>
        </record>
        
        <record id="action_invoice_tree_loss_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.invoice_tree"/>
            <field name="act_window_id" ref="action_invoice_loss"/>
        </record>

        <record id="action_invoice_form_loss_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="act_window_id" ref="action_invoice_loss"/>
        </record>
        
    </data>
</odoo>