<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
	<record model="ir.ui.view" id="stock_location_form_view">
		<field name="name">stock.location.heri.form</field>
		<field name="model">stock.location</field>
		<field name="inherit_id" ref="stock.view_location_form"/>
		<field name="arch" type="xml">
		    <xpath expr="//field[@name='usage']" position="before">
				<field name="billing_table_id" attrs="{'invisible': [('is_kiosk','!=',True)],'required':[('is_kiosk','=',True)]}" />
				<field options="{'reload_on_button': True}" name="contractor_ids" context="{'default_kiosk_id': id}" attrs="{'invisible': [('is_kiosk','!=',True)]}">
			   		<tree editable="bottom" decoration-success="status==True" delete="0">
			   		    <field name="partner_id" domain="[('customer','=',True)]"/>
			   			<field name="status"/>
			   			<field name="date_start"/>
			   			<field name="date_end"/>
			   			<field name="kiosk_id" invisible="1"/>
			   		</tree>
			   	</field>
			</xpath>
		</field>
	</record>
	
</odoo>